      <button style="background-image: <%= image_path("RightArrow.png")%> " class="w3-button w3-black w3-display-right" onclick="plusDivs(1)">&#10095;</button>
    </div>
    <p class="lead">Welcome to glitch!</p>
    <p><a class="btn btn-lg btn-success" href="#" role="button">Sign up today!</a></p>
  </div>
  <div class="row marketing">
    <div class="col-lg-6">
      <div class="container">
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"></h4>
              </div>
              <div class="modal-body">
                <%= image_tag("GlitchPrices.jpg", :id=>"pricesImage") %>
              </div>
              <div class="modal-footer" style="border-top:none!important;">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="glitchhomepagebuttons">
    <div class="col-lg-6 ">
      <button style="width:100%;" class="btn btn-lg special" data-toggle="modal" data-target="#myModal">	Our Rates!</button>
      <p style="font-size: 20px; color: #53e26a" >Finest selection of prices in town!</p>
      <button style="width:100%;" class="btn btn-lg special">Party Rates!</button>
      <p style="font-size: 20px; color: #53e26a" >Contact us with your information to setup party dates!<p>
      <button style="width:100%;" class="btn btn-lg special">Our games!</button>
       <p style="font-size: 20px; color: #53e26a" >Our selection of games to cater all types of people!<p>
    </div>
    <div class="col-lg-6">
      <a href="/schedulings/new" style="width: 100%;" class="btn btn-lg special">Schedule</a>
      <p style="font-size: 20px; color: #53e26a">Schedule party times and or events!</p>
      <button style="width:100%;" class="btn btn-lg special">	Blog!</button>
      <p style="font-size: 20px; color: #53e26a">Blog is soon to come!</p>
      <button style="width:100%;" class="btn btn-lg special">Events!</button>
      <p style="font-size: 20px; color: #53e26a">We stream upcoming championships for games!</p>
      
    </div>
  </div>
